@model Helperland.ViewModels.ForgotPasswordViewModel 
@{
    Layout = null;
}
@*<div class="modal fade" id="forgot_password">*@
            <div class="modal-dialog modal-dialog-centered modal-lg">
                
                <div class="modal-content">

                    <!-- Modal Header -->
                    
                    <div class="modal-header m-head">
                        <h4 class="model-title">Forgot Password</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="alertDiv">
                   </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <form >
                            <div class="form-group">
                                <input class="form-control" type="email" asp-for="Email" id="ForgotPasswordEmailId" placeholder="E-mail" />
                                <span asp-validation-for="Email" class="text-dander"></span>
                                <span id="forgotWarnig" class="text-danger"></span>
                            </div>

                            <div class="justify-content-center d-flex  ">
                                <button type="button" class="User_submit_btn rounded-pill mt-3 py-3" onclick="SendForgotPsddword();">Send</button>
                            </div>
                        </form>
                        <div class="text-center mt-4 mb-2">
                            <span class="Login_span">Login</span>
                        </div>
                    </div>



                </div>
            </div>
