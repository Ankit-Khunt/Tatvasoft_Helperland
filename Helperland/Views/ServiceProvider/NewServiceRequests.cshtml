@using Helperland.ViewModels.ServiceProvider

@model IEnumerable<NewServiceRequestViewModel> 

@{
    ViewData["Title"] = "New Service requests";
}



@section Link{
     <link rel="stylesheet" href="~/css/ServiceProviderAccount/NewServiceRequests.css" asp-append-version="true"/>
     <link rel="stylesheet" href="~/css/PopUp.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome-free-6.0.0-web/css/all.css"  asp-append-version="true"/>
     <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css" />
	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/r-2.2.9/rg-1.1.4/datatables.min.css" />
     <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
}

    <main id="newMAinId">

        <div class="modal fade" tab-index="-1" id="serviceProviderModel" role=" dialog"></div> 
     
         <div class="serviceUserHeader container-fluid justify-align-center d-flex justify-content-center">
                  <h1 class=" Welcome-user d-flex align-items-center justify-content-center flex-wrap text-break ">Welcome,
                <span class="headerUserName">@User.Identity.Name.Split(" ").ElementAt(0) !</span> </h1>
         </div>   
       
     
            <div class=" container-fluid position-relative d-flex align-items-start justify-content-center my-4">
            
                <partial name="~/Views/CustomerService/VerticalBar.cshtml" />
                <div class="serviceHistoryTableContainer">
                    <div class="align-items-center d-flex ">
                        <div>
                            <span class="tableHeader">Servicr area</span>
                        </div>
                    
                        <div>
                               <select class="selctArea justify-content-center p-1 ms-3" id="SelectAreaId" >
                                   <option value="1">25 KM</option>
                                   <option value="2">30 KM</option>
                               </select>
                        </div>
                   
                        <div class="ms-3">
                            <input type="checkbox" class="form-check-input active-checkbox" checked  id="petBoxId" name="pet"  onclick="petBoxfun('#petBoxId');">
                            <label class="form-check-label" for="petBoxId"> Include Pet at Home</label>
                        </div>
                   
                    </div>
                    <div class="tableDiv">
                        @* <partial name="NewServiceRequestTable.cshtml" />*@
                       <table id="upcomingHistoryTable" class="my-2" style="width:100%">
                        <thead>
                            <tr>
                                <th id="th1" style="width:0px !important"> <span class="th-1">Service Id</span></th>
							    <th id="th2">Service Date</th>
							    <th id="th3">Customer Details</th>
							    <th id="th4">Payment</th>
                                <th id="th5">Time conflict</th>
							    <th id="th6" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="NewServiceBodyId" >
                        @{

                            if(Model != null)
                            {

                                foreach(var Data in Model)
                                {
                                   var ServiceStDate = @Data.serviceRequestViewModel.ServiceStartDate;
                                    String serstartHour = ServiceStDate. ToString("HH:mm");
                                    string serviceOnlyStatHour = ServiceStDate.ToString("HH");
                                    int endHour = Int16.Parse(serviceOnlyStatHour);
                                    double sqlServiceHour = @Data.serviceRequestViewModel.ServiceHours;
                                    int sqlserviceHoutInt =(int) @Data.serviceRequestViewModel.ServiceHours;
                                    double finalDecimalMinut = (sqlServiceHour - sqlserviceHoutInt)*60;
                                    if (finalDecimalMinut >= 60)
                                    {
                                        finalDecimalMinut -= 60;

                                        endHour += 1;
                                    }
                                
                                    string endMinTimestr = ServiceStDate.ToString("mm");
                                    int endmintime=Int16.Parse(endMinTimestr);
                               
                                    int finalendHour = endHour + sqlserviceHoutInt;
                                    //string endTime=
                                    //int fooInt=Int16.Parse(foo);
                                   // int endHour = fooInt + 1; 

                                    var OnlySerStDate=ServiceStDate.ToShortDateString();
                                    //var ServiceTime=
                                
                                    <tr >
                                    <td >
                                    <div class="td-id">
                                     <span onclick="ServiceDetailFun(@Data.serviceRequestViewModel.ServiceRequestId);" id="@Data.serviceRequestViewModel.ServiceRequestId">@Data.serviceRequestViewModel.ServiceRequestId</span>
                                    </div>

                               
                                    </td>
                           
                                    <td >
                                    <div class="td-1">
                                        <div>
                                            <img src="~/images/calander.png" class="me-1"><span
                                                    class="service-detail-date">@Data.serviceRequestViewModel.ServiceStartDate.Date.ToString("dd/MM/yyyy")</span>
                                        </div>
                                                @if (finalendHour < 10)
                                                {
                                                     <div class="service-detail-time">
                                                        <img src="~/images/clock.png" class="me-1"> <span><span>@serstartHour</span>-<span><span>0</span>@finalendHour:@finalDecimalMinut<span>@if (finalDecimalMinut < 10) {<Span>0</span>}</span></span></span>
                                                    </div>
                                                }
                                                else
                                                {
                                                     <div class="service-detail-time">
                                                    <img src="~/images/clock.png" class="me-1"> <span><span>@serstartHour</span>-<span></span>@finalendHour:@finalDecimalMinut<span>@if (finalDecimalMinut < 10) {<Span>0</span>}</span></span>
                                                    </div>
                                                }
                                    </div>
                                
                                    </td>
                                
                                        <td>
                                        <div class="justify-content-start align-items-center d-flex td-2">
                                        <div>
                                           <img src="~/images/home-icon.png">
                                        </div>
                                        <div class="d-flex service-provider-name ps-1">
                                        
                                            <div>
                                                <span> @Data.user.FirstName @Data.user.LastName</span>
                                                <br/>
                                                <span> @Data.addressViewModel.AddressLine1</span><span> @Data.addressViewModel.AddressLine2</span><br/>
                                                <span>@Data.addressViewModel.PostalCode</span>
                                            </div>
                                        </div>

                                         </div>
                                     </td>
                             
                                 

                                    <td>
                                     <span class="payment-amount">@Data.serviceRequestViewModel.SubTotal€</span>
                                    </td>
                                    <td>
                                
                                    </td>
                                    <td>
                                        <span><button type="button" class="Action-btn rounded-pill" id="@Data.serviceRequestViewModel.ServiceRequestId" onclick="AcceptSerFun('@Data.serviceRequestViewModel.ServiceRequestId')">Accept</button></span>
                                    </td>

                            </tr>
                                }
                            }
                        }
                     </tbody>
      
                 
                     </table>
                    </div>
                      @*<partial name="NewServiceRequestTable.cshtml" />  *@

         

                
                </div>
            </div>

       
    </main>



@section script{
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
   
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.3/r-2.2.9/rg-1.1.4/datatables.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.1.0/js/buttons.html5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="~/js/ServiceProviderAccount/NewServiceRequests.js" asp-append-version="true"></script>
}