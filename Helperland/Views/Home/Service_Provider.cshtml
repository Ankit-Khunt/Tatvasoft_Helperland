@{
    Layout = null;
}

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Service Provider</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Service_Provider.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>

<body>

    <div class="service-provider">
        <div class="img ">





            <header id="header">
                <nav class="navbar navbar-expand-xl navbar-dark">
                    <div class="container-fluid d-flex">
                        <a asp-action="index" asp-controller="home" class="navbar-brand"><img src="~/images/logo-large.png" class="white-logo-transparent-background"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="collapsibleNavbar">
                            <ul class="navbar-nav ms-auto me-2">
                                <li class="nav-item text-center mb-1">
                                    <a class="nav-link border border-1 rounded-pill ms-1 me-1 bl" href="#" id="book">Book a cleaner</a>
                                </li>
                                <li class="nav-item text-center mb-1 ms-1">
                                    <a class="nav-link" asp-action="price" asp-controller="home">Prices</a>
                                </li>
                                <li class="nav-item text-center mb-1 ms-1">
                                    <a class="nav-link" href="#">Our Guarantee</a>
                                </li>
                                <li class="nav-item text-center mb-1 ms-1">
                                    <a class="nav-link" href="#">Blog</a>
                                </li>
                                <li class="nav-item text-center mb-1 ms-1">
                                    <a class="nav-link" asp-action="contact" asp-controller="home">Contact Us</a>
                                </li>
                                <li class="nav-item text-center mb-1 ms-1">
                                    <a class="nav-link border border-1 rounded-pill ms-1 me-1 bl" href="#" id="lgn">Login</a>
                                </li>
                                <li class="nav-item text-center mb-1 ms-1">
                                    <a class="nav-link border border-1 rounded-pill ms-1 me-1 bl" asp-action="service-provider" asp-controller="home" id="b-helper">Become a Helper</a>
                                </li>
                                <li class="nav-item text-center">
                                    <div class="nav-link ">
                                        <select id="dropdown">
                                            <option value="India"></option>
                                            <option value="Australia"></option>
                                            <option value="US"></option>
                                        </select>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>


            <div class=" register-now container">
                <form>
                    <div class=" row justify-content-center  ">

                        <h1 class="form-header text-center">Register Now!</h1>
                        <div class="form-content">
                            <input type="text" placeholder="First name" name="fname" id="" class="form-item col-12">
                            <input type="text" placeholder="Last name" name="fname" id="" class="form-item col-12">
                            <input type="text" placeholder="Email Address" name="fname" id=""
                                   class="form-item col-12">
                            <div class="col-12 form-mobile">

                                @*<div class=" mx-0 ">
                                    <label type="text" disabled class="form-group1 col-2 " id="countryCode"
                                           placeholder="+49" />
                                    <input type="text" class="form-group2 col-10" placeholder="Mobile Number"
                                           aria-label="Mobile Number" aria-describedby="basic-addon1" />
                                </div>*@
                            </div>
                            <input type="password" placeholder="Password" name="fname" id=""
                                   class="form-item col-12">
                            <input type="password" placeholder="Confirm Password" name="fname" id=""
                                   class="form-item col-12">
                            <div class="form-checkbox">
                                <div class="d-flex form-checkbox-1">
                                    <input type="checkbox" id="" name="sen-me" value="yes">
                                    <p>Send me newsletters from Helperland</p>

                                </div>
                                <div class="d-flex form-checkbox-2  ">
                                    <input type="checkbox" id="" name="i-accept" value="yes">
                                    <p>I accept <span>terms and conditions</span> & <span>policy</span> </p>
                                </div>
                            </div>
                            <div class="form-capture ">

                                <div class="d-flex form-checkbox-capture">
                                    <input type="checkbox" id="" name="sen-me" value="yes">
                                    <p>i'm not a robot</p>

                                </div>
                            </div>
                            <div class="text-center ">
                                <button type="button" name="get-start" class="form-button rounded-pill">
                                    Get
                                    Started <img src="~/images/arrow.png" class="ps-1">
                                </button>

                            </div>




                        </div>
                    </div>



                </form>
            </div>





            <div class="down-arrow text-center">
                <img src="~/images/down-arrow.png">

            </div>

        </div>



        <main>
            <section class="How-it-Work ">



                <div class="left-img">

                    <div class="lf-img-1">
                        <img src="~/images/spre.png">
                    </div>
                    <div class="lf-img-2 ">
                        <img src="~/images/potu.png">
                    </div>
                    <div class="left-img-3">
                        <img src="~/images/jadu.png">
                    </div>

                </div>
                <div class="right-img ">
                    <div class="lf-img-1">
                        <img src="~/images/cleaner.png">
                    </div>
                    <div class="lf-img-2 ">
                        <img src="~/images/jjadu.png">
                    </div>
                    <div class="left-img-3">
                        <img src="~/images/pichi.png">
                    </div>
                </div>

                <div class="text-center">
                    <h2 class=" how-it-work ">How it works</h2>

                </div>

                <div class="service-body ">

                    <div class="how-it-work-card justify-content-center d-flex flex-column align-items-center container-fluid  ">
                        <div class=" row sec-1 d-flex row flex-wrap-reverse align-items-center justify-content-center justify-content-md-center ">
                            <div class="sec-content-1 col-md-6 col-sm-12 col-12  align-items-center justify-content-center  ">
                                <h3 class="sec-heading">Register yourself</h3>
                                <p class="sec-p">
                                    Provide your basic information to register
                                    yourself as a service provider.
                                </p>
                                <!-- <div class="sec-arrow d-flex col-md-6 justify-content-center justify-content-md-start   "> -->
                                <p class="sec-arrow">Read more <img src="~/images/arrow-blacl.png" width="29px" height="9px" class="ms-1"></p>

                                <!-- </div> -->

                            </div>
                            <div class=" sec-img  col-md-6 col-sm-12 col-12 justify-content-center d-flex ">
                                <img src="~/images/register-self.png">
                            </div>





                        </div>





                        <div class=" row  row flex-wrap align-items-center justify-content-center justify-content-md-between ">
                            <div class=" sec-img  col-md-6 col-sm-12 col-12 justify-content-center justify-content-md-start d-flex ">
                                <img src="~/images/get-service (2).png">
                            </div>
                            <div class="sec-content-2 col-md-6 col-sm-12 col-12  align-items-center justify-content-center  ">
                                <h3 class="sec-heading">Get service requests</h3>
                                <p class="sec-p">
                                    You will get service requests from
                                    customes depend on service area and profile.
                                </p>
                                <!-- <div class="sec-arrow d-flex col-md-6 justify-content-center justify-content-md-start   "> -->
                                <p class="sec-arrow">Read more <img src="~/images/arrow-blacl.png" width="29px" height="9px" class="ms-1"></p>

                                <!-- </div> -->

                            </div>



                            <div class=" row sec-3 d-flex row flex-wrap-reverse align-items-center justify-content-center justify-content-md-center ">
                                <div class="sec-content-3 col-md-6 col-sm-12 col-12  align-items-center justify-content-center  ">
                                    <h3 class="sec-heading">Complete service</h3>
                                    <p class="sec-p">
                                        Accept service requests from your customers
                                        and complete your work.
                                    </p>
                                    <!-- <div class="sec-arrow d-flex col-md-6 justify-content-center justify-content-md-start   "> -->
                                    <p class="sec-arrow">Read more <img src="~/images/arrow-blacl.png" width="29px" height="9px" class="ms-1"></p>

                                    <!-- </div> -->

                                </div>
                                <div class=" sec-img  col-md-6 col-sm-12 col-12 justify-content-center d-flex ">
                                    <img src="~/images/complete-service (2).png">
                                </div>





                            </div>







                        </div>



                    </div>
                </div>

                <section class="get-our-new">
                    <div class="newsletter d-flex flex-column align-items-center justify-content-center">
                        <div class="newsletterHeader">GET OUR NEWSLETTER</div>
                        <div class="newsletterForm d-flex flex-wrap align-items-center justify-content-center">
                            <input type="email" class="rounded-pill" name="email" id="email" placeholder="Your Email" />
                            <button class="send rounded-pill">Submit</button>
                        </div>
                    </div>
                </section>

            </section>



        </main>

    </div>

    <footer class="mt-5 service-provider-footer">
        <div class=" footer-div container flex-wrap d-flex justify-content-between  align-items-center py-4  ">
            <div>
                <img src="~/images/logo.png" width="100px">
            </div>

            <div class=" footer-items ">
                <ul class=" flex-wrap align-items-center justify-content-center">
                    <li class="">
                        <a asp-action="index" asp-controller="home">HOME</a>
                    </li>
                    <li class="">
                        <a asp-action="about" asp-controller="home">ABOUT</a>
                    </li>
                    <li class="">
                        <a href="#">TESIMONIALS</a>
                    </li>
                    <li class="">
                        <a asp-action="faq" asp-controller="home">FAQS</a>
                    </li>
                    <li class="">
                        <a href="#">INSURANCE POLICY</a>
                    </li>
                    <li class="">
                        <a href="#">IMPRESSUM</a>
                    </li>

                </ul>
            </div>



            <div class="socialMedia d-flex flex-nowrap align-items-center justify-content-center">
                <a class="d-block" href="https://facebook.com" target="_blank">
                    <svg xmlns="http://www.w3.org/2000/svg" width="9" height="18">
                        <path fill-rule="evenodd" fill="#CCC"
                              d="M1.947 3.48v2.481H0v3.033h1.947V18.1h4.001V8.995h2.685S8.885 7.541 9.7 5.95H5.963V3.876c0-.31.437-.728.868-.728H9.11V.9H6.46C1.848.9 1.947 3.27 1.947 3.48z" />
                    </svg>
                </a>
                <a class="d-block" href="https://instagram.com" target="_blank">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                        <path fill-rule="evenodd" fill="#CCC"
                              d="M14.48 20H5.519A5.524 5.524 0 0 1 0 14.482V5.52C0 2.477 2.475.2 5.519.2h8.961c3.043 0 5.519 2.277 5.519 5.32v8.962A5.525 5.525 0 0 1 14.48 20zm3.744-5.518V5.52a3.748 3.748 0 0 0-3.744-3.744H5.519A3.749 3.749 0 0 0 1.774 5.52v8.962a3.749 3.749 0 0 0 3.745 3.744h8.961a3.748 3.748 0 0 0 3.744-3.744zm-2.855-8.536c-.099 0-.678-.14-.92-.381-.242-.243.221-.578.221-.921 0-.342-.463-.678-.221-.92.242-.242.821-.381.92-.381.343 0 1.111.139.92.381.242.242.381.578.381.92 0 .342-.139.678-.381.921.171.241-.577.381-.92.381zm-5.37 9.208c-2.841 0-5.153-2.312-5.153-5.054 0-2.941 2.312-5.252 5.153-5.252 2.842 0 5.153 2.311 5.153 5.252 0 2.742-2.311 5.054-5.153 5.054zm0-8.532c-1.863 0-3.379 1.516-3.379 3.478 0 1.764 1.516 3.28 3.379 3.28s3.379-1.516 3.379-3.28c0-1.962-1.516-3.478-3.379-3.478z" />
                    </svg>
                </a>



            </div>
        </div>
        <div class="justify-content-center d-flex">
            <hr class="justify-content-center m-0" style="width: 80%; color: #4f4f4f;   height: 1px;">
        </div>
        <!-- <p>adsdas </p> -->
        <div class=" footer-privacy service-provider-footer-hr text-center mb-0 py-3">
            <p class="mb-0 py-2 d-inline">
                ©2018 Helperland. All rights reserved. Terms and Conditions |
                <a href="#">privacy policy</a>
            </p>


        </div>



    </footer>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>


